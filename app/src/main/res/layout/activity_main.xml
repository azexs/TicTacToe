<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray"
    android:orientation="vertical" android:gravity="center|top">


    <TextView
        android:text="TIC TAC TOE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/textView"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:gravity="center">
        <Button
            android:text="SINGLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSingle" android:layout_marginBottom="50dp"/>
        <Button
            android:text="MULTI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnMulti"/>
        /></LinearLayout>


</LinearLayout>